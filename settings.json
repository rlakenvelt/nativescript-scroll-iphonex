// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.css": { "when": "$(basename).scss" },
        "**/*.map": { "when": "$(basename).map" },
        "node_modules/": true,
        "platforms/": true,
        "report/": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/*.js": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/platforms": true
    }

}
